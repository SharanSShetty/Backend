# Backend mailer configuration
# Copy this file to `.env` and fill in the values

# Server
PORT=4000

# CORS: comma-separated list of allowed origins
# For local Vite dev server:
# Add your deployed frontend URL when on Render, e.g. https://your-site.onrender.com
CORS_ORIGINS=http://localhost:5173,https://sharan-shetty.vercel.app/

# Recipient address where messages will be delivered
TO_EMAIL=sharansshetty123@gmail.com

# Outgoing email (visible as sender)
FROM_EMAIL=portfolio@your-domain.com
FROM_NAME=Portfolio Contact Form

# SMTP configuration (example for Gmail - requires App Password)
# For Gmail with TLS (recommended)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=sharan147804@gmail.com
SMTP_PASS=qhcf bumz oalb ryjq

# Alternative: Gmail with SSL
# SMTP_PORT=465
# SMTP_SECURE=true

# Optional SMTP timeouts (milliseconds) to avoid connection issues in some hosts
# Defaults used if not set: 15000 / 10000 / 20000
SMTP_CONN_TIMEOUT=15000
SMTP_GREETING_TIMEOUT=10000
SMTP_SOCKET_TIMEOUT=20000
